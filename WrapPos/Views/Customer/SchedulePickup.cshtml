@model ELaundry.Models.ViewModel.SchedulePickupViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">Schedule Pickup Request</li>
        </ol>
    </div>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link href="~/css/SchedulePickup.css" rel="stylesheet" />
    <div class="container">
        <h2 class="well well-sm">Schedule Pickup Request</h2>
        <div class="col-lg-12 well">
            <div class="row">
                <form>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Full Name</label>
                                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = "Enter Fullname", @autofocus = "", @autocomplete = "off" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Contact Number</label>
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Enter Contact Number", @autofocus = "", @autocomplete = "off" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter Valid Email", @autofocus = "", @autocomplete = "off" })
                        </div>
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Address</label>
                                @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @placeholder = "Enter Address Detail", @autofocus = "", @autocomplete = "off" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Alternative Address</label>
                                @Html.TextAreaFor(model => model.SecondaryAddress, new { @class = "form-control", @placeholder = "Enter Contact Number", @autofocus = "", @autocomplete = "off" })
                            </div>
                        </div>
                        <div class="row">
                            <div class=" col-sm-6 form-group">
                                <label>Pickup Date</label>
                                @Html.EditorFor(model => model.PickupDate, new { htmlAttributes = new { @class = "form-control date-picker", onkeydown = "return false", onpaste = "return false" } })
                            </div>

                            <div class="col-sm-6 form-group">
                                <label>Time Slot</label>
                                @Html.DropDownListFor(model => model.TimeSlot, new SelectList(ViewBag.TimeSlot, "TimeSlot", "TimeSlot"), "Choose Pickup Time", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TimeSlot, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Delivery Date</label>
                                @Html.EditorFor(model => model.DeliveryDate, new { htmlAttributes = new { @class = "form-control date-picker", onkeydown = "return false", onpaste = "return false" } })
                            </div>
                        </div>
                        <input type="submit" value="Schedule Pickup Now" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
}
<script src="~/js/jquery-1.11.1.min.js"></script>
<script src="~/js/jquery-ui-1.12.1.min.js"></script>
<script type="text/javascript">
    $(function () {
        $(".date-picker").datepicker({
            dateFormat: 'dd-M-yy'
        });

    });

</script>